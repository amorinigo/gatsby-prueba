{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@components": ["components"],
            "@images/*": ["images/*"],
            "@pages": ["pages"],
            "@styles": ["styles"],
        }
    },
    "include": ["./src/**/*", "./gatsby-node.js", "./gatsby-config.ts", "./plugins/**/*"]
}
